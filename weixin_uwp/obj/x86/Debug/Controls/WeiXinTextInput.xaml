<UserControl
    x:Class="weixin_uwp.Controls.WeiXinTextInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:weixin_uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="White">
        <Image x:ConnectionId='1' Name="emojiImage1" Height="25" Width="25" Source="ms-appx:///Assets/pc/Chat_Expression_Icon.scale-200.png" Margin="28,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Image x:ConnectionId='2' Name="folderImage1" Height="25" Width="25" Source="ms-appx:///Assets/pc/Chat_SendFile_Icon.scale-200.png" Margin="78,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox x:ConnectionId='3' Name="textBox1" BorderThickness="0" BorderBrush="Transparent" TextWrapping="Wrap" AcceptsReturn="True" IsHoldingEnabled="False" Margin="16,40,28,40" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        <Button x:ConnectionId='4' Name="button1" Content="发送" Width="70" Height="30" Background="White" BorderBrush="#ececec" BorderThickness="0.2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,28,10"/>
    </Grid>
</UserControl>

