    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="40"
    Width="40"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <Rectangle x:ConnectionId='1' Name="rect1" RadiusX="4" RadiusY="4" Fill="#9eeb6b" StrokeThickness="0" Margin="0,0,6,0"/>
